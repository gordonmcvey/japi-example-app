<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <parameters>
        <parameter key="controllerRoot" type="string">gordonmcvey\exampleapp\controller</parameter>
    </parameters>

    <services>
        <defaults autoconfigure="true" autowire="true"/>

        <service id="StatusCodeFactory" class="gordonmcvey\httpsupport\enum\factory\StatusCodeFactory" />

        <service id="ErrorHandlerInterface" class="gordonmcvey\JAPI\error\JsonErrorHandler">
            <argument type="service" id="StatusCodeFactory" />
            <argument type="constant">JSON_PRETTY_PRINT</argument>
            <argument type="constant">true</argument>
        </service>

        <service id="ShutdownHandler" class="gordonmcvey\JAPI\ShutdownHandler">
            <argument type="service" id="ErrorHandlerInterface" />
        </service>

        <service id="RequestMeta" class="gordonmcvey\exampleapp\middleware\RequestMeta">
            <argument type="service" id="received" />
        </service>

        <service id="ProcessedTime" class="gordonmcvey\exampleapp\middleware\ProcessedTime" />

        <service id="gordonmcvey\exampleapp\controller\Health\Ping" class="gordonmcvey\exampleapp\controller\Health\Ping">
            <call method="addMiddleware">
                <argument type="service" id="ProcessedTime" />
            </call>
        </service>

        <service id="CallStackFactory" class="gordonmcvey\JAPI\middleware\CallStackFactory" />

        <service id="RoutingStrategyInterface" class="gordonmcvey\JAPI\routing\PathNamespaceStrategy">
            <argument type="string">%controllerRoot%</argument>
        </service>

        <service id="RouterInterface" class="gordonmcvey\JAPI\routing\Router">
            <argument type="service" id="RoutingStrategyInterface" />
        </service>

        <service id="PayloadHandlerInterface" class="gordonmcvey\httpsupport\request\payload\JsonPayloadHandler"/>

        <service id="ControllerFactoryInterface" class="gordonmcvey\exampleapp\factory\DiControllerFactory">
            <argument type="service" id="containerObject" />
        </service>

        <service id="Bootstrap" class="gordonmcvey\JAPI\Bootstrap">
            <argument type="service" id="RouterInterface" />
            <argument type="service" id="ControllerFactoryInterface" />
        </service>

        <service id="JAPI" class="gordonmcvey\JAPI\JAPI">
            <argument type="service" id="CallStackFactory" />
            <argument type="service" id="ErrorHandlerInterface" />
            <call method="addMiddleware">
                <argument type="service" id="RequestMeta" />
            </call>
        </service>
    </services>
</container>
